    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_380sdp"
        android:background="@drawable/shadow"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:text="Login"
            android:textSize="@dimen/_25sdp" android:textStyle="bold" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_37sdp"
            android:layout_margin="@dimen/_12sdp"
            android:background="@drawable/shadow_on_component"
            android:gravity="center"
            android:hint="E-mail Id"

            android:textStyle="bold" />

        <Space android:layout_width="@dimen/_1sdp" android:layout_height="@dimen/_7sdp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_37sdp"
            android:layout_margin="@dimen/_12sdp"
            android:background="@drawable/shadow_on_component"
            android:gravity="center"
            android:password="true"
            android:hint="Password"
            android:textStyle="bold" />

        <Button
            android:id="@+id/textView5"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/_12sdp" android:background="@drawable/style_button" android:text="Sign In" android:textStyle="bold" />

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" android:orientation="vertical">

            <TextView
                android:id="@+id/forget_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Forget Password ? Click Here "
                android:textColor="#9045"
                android:textStyle="bold" />

            <LinearLayout android:layout_width="@dimen/_250sdp" android:layout_height="64dp" android:gravity="center" android:orientation="horizontal" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintCircleRadius="@dimen/_50sdp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.718">


                <ImageView
                    android:id="@+id/facebook_login"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/facebook" />

            </LinearLayout>

            <Button

                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New User Register Here"
                android:id="@+id/Registration" android:textColor="#56f" android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
